{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build Active File",
      "command": "/home/fds/build/gcc-11/bin/g++",
      "args": [
        "-std=c++17",
        "-I${workspaceFolder}/helpers",
        "-g",
        "-o",
        "${workspaceFolder}/bin/${fileBasenameNoExtension}",
        "${fileDirname}/*.cpp",
        "${workspaceFolder}/bin/libhelpers.a"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build a day's code."
    },
    {
      "type": "shell",
      "label": "Compile Helpers",
      "command": "/home/fds/build/gcc-11/bin/g++",
      "args": [
        "-c",
        "-std=c++17",
        "${workspaceFolder}/helpers/*.cpp"
      ],
      "options": {
        "cwd": "${workspaceFolder}/helpers/obj"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Compile the helpers code."
    },
    {
      "type": "shell",
      "label": "Build Helpers Library",
      "command": "/usr/bin/ar",
      "args": [
        "rcs",
        "${workspaceFolder}/bin/libhelpers.a",
        "${workspaceFolder}/helpers/obj/*.o"
      ],
      "options": {
        "cwd": "${workspaceFolder}/helpers"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [ "Compile Helpers" ],
      "detail": "Build the helpers library."
    }
  ]
}